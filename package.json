{
  "name": "@prisma-factory/monorepo",
  "private": true,
  "engines": {
    "node": ">=14.0.0",
    "pnpm": ">=6.23"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "clean": "turbo run clean --parallel && rimraf .turbo pnpm-lock.yaml .pnpm-debug.log && rimraf node_modules",
    "deps:check": "ncu --deep",
    "deps:update": "ncu --deep -u",
    "version": "changeset version",
    "release": "pnpm run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.2",
    "@changesets/cli": "^2.20.0",
    "@types/node": "^17.0.16",
    "prettier": "^2.5.1",
    "prettier-plugin-prisma": "^3.9.0",
    "rimraf": "^3.0.2",
    "turbo": "^1.1.2"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@babel/core",
        "@testing-library/dom",
        "react",
        "react-dom"
      ],
      "allowedVersions": {
        "react": "*",
        "react-dom": "*"
      }
    }
  }
}
